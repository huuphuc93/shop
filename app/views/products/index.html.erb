<div class="container">
  <div class="row"></div>
  <div class="row"></div>

  <div class="row">
    <% @products.each do |product|%>
      <div class="col s12 m6 l3">
        <%= link_to product do %>
          <div class="card z-depth-2">
            <div class="card-image">
             <%= image_tag "car.jpg" %>
             <span class="card-title"><%= product.name %></span>
            </div>
            <div class="card-content">
              <%= product.content.html_safe %>
            </div>
        <% end %>
          <div class="card-action">
            <div class="row">
            <div class="col s6 l4">
              <%= product.price %>
            </div>
            <div class="col s6 l8">
              <a href="#" class= "waves-effect waves-light btn right">Add to card</a>
            </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
